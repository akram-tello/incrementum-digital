{% extends "base.twig" %}

{% block content %}
	<article class="main-content page-audit page-thankyou-2" id="post-{{post.ID}}">
        {% set photo   = post.meta('featured_image') %}
        {% set heading = post.meta('heading') %}
        {% set content = post.meta('content') %}
        {% set cta     = post.meta('cta_button') %}
        <section class="page-heading">
            <div class="inner-wrap">
                <div class="page-heading__content">
                    <div class="page-heading__content--photo">
                        <img src="{{ photo['url'] }}" alt="{{ photo['alt']}}">
                    </div>
                    <div class="page-heading__content--text">
                        <h2>{{ heading }}</h2>
                        {{ content }}
                        {% if cta is not null %}
                            <a href="{{ cta['url'] }}" class="cta-purple cta-button">{{ cta['title'] }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>

        {% set bg       = post.meta('background') %}
        {% set heading  = post.meta('text_heading') %}
        {% set intro    = post.meta('text_intro') %}
        {% set cta      = post.meta('text_button') %}
        {% set show     = post.meta('show_textbg') %}

        <section class="text-background show-{{ show }}">   
            <img src="{{ bg['url'] }}" alt="{{ bg['alt'] }}" class="bg">
            <div class="text-background__content">
                <div class="inner-wrap">
                    <h2>{{ heading }}</h2>
                    {{ intro }}
                    {% if cta is not null %}
                        <a href="{{ cta['url'] }}" class="cta-purple cta-button">{{ cta['title'] }}</a>
                    {% endif %}
                </div>
            </div>
        </section>

        {% set heading = post.meta('service_heading') %}
        {% set lists    = post.meta('service_list') %}
        {% set show     = post.meta('show_services') %}


        {% if lists is not null %}
        <section class="services-list-wrapper show-{{ show }}">
            <div class="inner-wrap">
                <h2>{{ heading }}</h2>
                <div class="services">
                    {% for list in lists %}
                        <div class="services-list">
                            <div class="services-list__item services-list__photo">
                                <img src="{{ list.photo['url'] }}" alt="{{ list.photo['alt'] }}">
                            </div>
                            <div class="services-list__item services-list__content">
                                <h4>{{ list.subtitle }}</h4>
                                <h3>{{ list.title }}</h3>
                                {{ list.description }}

                                {% if list.cta_button is not null %}
                                    <a href="{{ list.cta_button['url'] }}" class="cta-button">{{ list.cta_button['title'] }}</a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        {% endif %}

        {% set heading  = post.meta('featured_heading') %}
        {% set lcontent = post.meta('left_content') %}
        {% set rcontent = post.meta('right_content') %}
        {% set show     = post.meta('show_featured') %}



        <section class="home-team show-{{ show }}">
            <div class="inner-wrap">
                <div class="section-intro">
                    {% if heading %}<h3 class="subhead">{{ heading }}</h3>{% endif %}
                </div>
                <div class="copy">
                    <div class="column">
                        {{ lcontent }}
                    </div>

                    <div class="column">
                        {{ rcontent }}
                    </div>
                </div>
            </div>
            <div class="floaty-blob"></div>
        </section>

        {% set testimonials = post.meta('testimonials') %}
        {% set show     = post.meta('show_video') %}


        <section class="home-video-testimonials show-{{ show }}">
            <div class="inner-wrap">
                <div class="section-intro">
                    {% if testimonials.headline %}<h3 class="subhead">{{ testimonials.headline }}</h3>{% endif %}
                    {% if testimonials.copy %}<div class="intro">{{  testimonials.copy | wpautop }}</div>{% endif %}
                    {# <p>The brands we work with aren’t just clients - they’re our partners. Here’s some of their stories:</p> #}
                </div>
                <div class="videos">
                    <ul>
                    {% set vid_testimonials = testimonials.video_testimonials %}
                    {% for testimonial in vid_testimonials %}
                        <li>
                            <div class="video-container">
        {% if testimonial.local_or_youtube == 'local' %}
        <video controls preload="none" {% if intro_block.video_poster_image %}poster="{{ Image(intro_block.video_poster_image).src }}{% endif %}">
            <source src="{{ intro_block.video_file.url }}" type="video/mp4">
        </video>
        {% endif %}
        {% if testimonial.local_or_youtube == 'youtube' %}
            <iframe src="https://www.youtube.com/embed/{{ testimonial.youtube_video_id }}?showinfo=1&modestbranding=1&rel=0" frameborder="0" allowfullscreen></iframe>
        {% endif %}
                            </div>
                            <h4 class="name">{{ testimonial.name }}</h4>
                            <h4 class="title_co">{{ testimonial.position_company }}</h4>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </section>


        {% set quote = post.meta('quote') %}
        {% set photo = post.meta('testimonial_photo') %}
        {% set name  = post.meta('testimonial_name') %}
        {% set show     = post.meta('show_testimonial') %}


