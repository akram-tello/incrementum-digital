{% extends "base.twig" %}

{% block content %}
		<article class="main-content page-services" id="post-{{post.ID}}">
    	    {% set hero_block = post.meta('hero') %}
        	{% if hero_block.display_hero == 'yes' %}
			<section class="page-hero">
				<div class="inner-wrap{% if hero_block.hero_image %} two-col{% endif %}">
					{% if hero_block.hero_image %}
					<div class="hero-img">
						<img src="{{ Image(hero_block.hero_image).src }}" alt="{{ Image(hero_block.hero_image).alt }}">
						{# <img src="{{ Image(post.thumbnail).src }}" alt="{{ Image(post.thumbnail).alt }}"> #}
					</div>
					{% endif %}
					<div class="hero-text">
						<h1 class="page-title">{{ post.title }}</h1>
						{% if hero_block.headline %}<h2>{{ hero_block.headline }}</h2>{% endif %}
						{% if hero_block.text %}{{ hero_block.text | wpautop }}{% endif %}
						{% if hero_block.cta_button_text %}
						<div class="cta">
							<a href="{{ hero_block.cta_button_url }}" class="cta-button">{{ hero_block.cta_button_text }}</a>
						</div>
						{% endif %}
					</div>
				</div>
				<div class="floaty-blob"></div>
			</section>
			{% endif %}
			{% set intro = post.meta('intro') %}
        	{% if intro.display_block == 'yes' %}
			{# <section class="service-intro" {% if intro.background_image %}style="background-image: url('{{ Image(intro.background_image).src }}');background-size:contain;background-repeat:no-repeat;background-position:center bottom;"{% endif %}> #}
			<section class="service-intro">
				<div class="inner-wrap">
					{% if intro.headline %}<h2>{{ intro.headline }}</h2>{% endif %}
					<div class="intro-text">
						{% if intro.text %}{{  intro.text | wpautop }}{% endif %}
					</div>
				</div>
			</section>
			{% endif %}

			{% set services_sec = post.meta('services_block') %}
        	{% if services_sec.display_block == 'yes' %}

			<section class="services-grid">
					<div class="inner-wrap">
					<div class="section-intro">
						{# <h3 class="subhead">Services</h3> #}
						{% if services_sec.headline %}<h2 class="h2">{{ services_sec.headline }}</h2>{% endif %}
						{% if services_sec.copy %}<div class="intro">{{  services_sec.copy | wpautop }}</div>{% endif %}
					</div>
					{% set services = services_sec.services %}
					{% if services %}
					<div class="services">
							<ul class="services-list">
							{% for service in services %}
								<li>
									<a href="{{ service.link }}">
									<div class="icon-wrap"><div class="icon">{% if service.icon %}<img src="{{ Image(service.icon).src }}" alt="{{ service.name }} icon">{% endif %}</div></div>
									<div class="label">{{ service.name}}</div></a>
								</li>
							{% endfor %}
							</ul>
					</div>
					{% if services_sec.display_cta_btn == 'yes' %}
					<div class="cta">
					{% if services_sec.cta_btn_text %}<a href="{{ services_sec.cta_button_url }}" class="cta-button">{{ services_sec.cta_btn_text }}</a>{% endif %}
					</div>
					{% endif %}
					{% endif %}
				</div>
			</section>
	        {% endif %}

			{% set top_benefits = post.meta('top_benefits') %}
        	{% if top_benefits.display_block == 'yes' %}
			<section class="service-benefits">
				<div class="inner-wrap">
					<div class="section-intro">
						{% if top_benefits.headline %}<h2 class="subhead">{{ top_benefits.headline }}</h2>{% endif %}
						{% if top_benefits.text %}<div class="intro">{{  top_benefits.text | wpautop }}</div>{% endif %}
					</div>
					{% set benefits = top_benefits.benefits %}
					{% if benefits %}
					<ul class="benefits">
						{% for benefit in benefits %}
							<li>
							<div class="image-wrap"><img src="{{ Image(benefit.benefit_image).src }}"  alt="{{ benefit.headline }}"></div>
							{% if benefit.headline %}<h3>{{ benefit.headline }}</h3>{% endif %}
							{% if benefit.text %}{{  benefit.text | wpautop }}{% endif %}
						{% endfor %}
					</ul>
					{% endif %}



					{% if top_benefits.cta_button_text %}
					<div class="cta">
						<a href="{{ top_benefits.cta_button_url }}" class="cta-button">{{ top_benefits.cta_button_text }}</a>
					</div>
					{% endif %}
				</div>
			</section>
			{% endif %}

    	    {% set key_benefit = post.meta('key_benefit') %}
        	{% if key_benefit.display_block == 'yes' %}
			<section class="service-key-benefit">
				<div class="inner-wrap">
					<div class="section-intro">
						{% if key_benefit.headline %}<h2>{{ key_benefit.headline }}</h2>{% endif %}
					</div>
					<div class="section-content{% if key_benefit.benefit_image %} two-col{% endif %}"">
						{% if key_benefit.benefit_image %}
						<div class="benefit-img">
							<img src="{{ Image(key_benefit.benefit_image).src }}" alt="{{ Image(key_benefit.benefit_image).alt }}">
						</div>
						{% endif %}
						<div class="section-text">
							{% if key_benefit.text %}{{ key_benefit.text | wpautop }}{% endif %}
							{% if key_benefit.cta_button_text %}
							<div class="cta">
								<a href="{{ key_benefit.cta_button_url }}" class="cta-button">{{ key_benefit.cta_button_text }}</a>
							</div>
							{% endif %}
						</div>
					</div>
				</div>
			</section>
			{% endif %}

			{% set case_studies = post.meta('case_studies') %}
			{% if case_studies.display_block == 'yes' %}
			<section class="featured-case-studies">
				<div class="inner-wrap">
					<div class="section-intro">
						{% if case_studies.headline %}<h3>{{ case_studies.headline }}</h3>{% endif %}
						{% if case_studies.text %}{{  case_studies.text | wpautop }}{% endif %}
					</div>
					{% set cases = post.meta('featured_case_studies') %}
					<div class="cases">
							<ul>
							{% for case in cases %}
								<li>
								{% if case.cases.get_thumbnail %}
									<div class="case-image">
										<a href="{{case.cases.link}}"><img src="{{  case.cases.thumbnail.src }}" alt="{{ case.cases.title}}"></a>
									</div>
								{% endif %}
									<h4><a href="{{ case.cases.link }}">{{ case.cases.title }} </a></h4>
								</li>
							{% endfor %}
							</ul>
					</div>

					{% if case_studies.case_studies_cta == 'yes' %}
					<div class="cta">
					{% if case_studies.cta_btn_text %}<a href="{{ case_studies.cta_btn_url }}" class="cta-button">{{ case_studies.cta_btn_text }}</a>{% endif %}
					</div>
					{% endif %}
				</div>
			</section>
			{% endif %}

			{% set review_block = post.meta('review_block') %}
        	{% if review_block.display_block == 'yes' %}
			<section class="banner-review">
				<div class="inner-wrap">
					<div class="wrapper">
						{% set the_review = review_block.review %}
						{% if the_review.excerpt %}
						<div class="review-txt"><p>{{ the_review.excerpt }} &mdash; <a target="blank" class="txt-reviewer" href="{{ the_review.url }}">{{ the_review.review_author }}</a></p></div>
						{% endif %}
						<a href="https://www.trustpilot.com/review/incrementumdigital.com" class="logo" target="blank"><img src="{{ site.theme.link }}/static/img/trustpilot.svg"></a>					{# <a href="/about/team/" class="btn cta arrow-right">Meet the Team</a> #}
					</div>
				</div>
			</section>
            {% endif %}

			{% set contact_form = post.meta('contact_form') %}
        	{% if contact_form.display_block == 'yes' %}

			<section class="footer-form">
				<div class="inner-wrap">
					<div class="section-intro">
						<h3 class="subhead">{{ options.footer_form_headline }}</h3>
						{% if options.footer_form_intro_text %}<p class="copy">{{ options.footer_form_intro_text }}</p>{% endif %}
					</div>
					<div class="form">
						{% filter shortcodes %}
							{# [contact-form-7 id="168" html_id="gen-contact-form" title="General Contact"] #}
						   {{ options.footer_form_shortcode }}
						{% endfilter %}
					</div>
				</div>
			</section>
            {% endif %}


		</article>
{% endblock %}